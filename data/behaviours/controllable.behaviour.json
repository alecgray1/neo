{
  "id": "controllable",
  "name": "Controllable",
  "version": "1.0.0",
  "description": "Interface for equipment that can be controlled",
  "callbacks": [
    {
      "name": "get_status",
      "description": "Return current equipment status",
      "inputs": [],
      "outputs": [
        { "name": "mode", "type": { "type": "String" }, "description": "Current operating mode" },
        { "name": "is_enabled", "type": { "type": "Boolean" }, "description": "Whether equipment is enabled" }
      ]
    },
    {
      "name": "set_mode",
      "description": "Set the operating mode",
      "inputs": [
        { "name": "mode", "type": { "type": "String" }, "description": "Mode to set" }
      ],
      "outputs": [
        { "name": "success", "type": { "type": "Boolean" }, "description": "Whether mode was set successfully" }
      ]
    }
  ],
  "optional_callbacks": [
    {
      "name": "get_diagnostics",
      "description": "Return detailed diagnostic information",
      "inputs": [],
      "outputs": [
        { "name": "diagnostics", "type": { "type": "Any" }, "description": "Diagnostic data" }
      ]
    }
  ]
}
