{
  "id": "bp-temp-alert-001",
  "name": "Temperature Alert",
  "version": "1.0.0",
  "description": "Monitor zone temperature and trigger alerts when out of range",
  "variables": {
    "highTempThreshold": {
      "type": "Real",
      "default_value": 78.0,
      "description": "Temperature threshold for high temp alert"
    },
    "lowTempThreshold": {
      "type": "Real",
      "default_value": 65.0,
      "description": "Temperature threshold for low temp alert"
    }
  },
  "nodes": [
    {
      "id": "node-1",
      "type": "neo/OnEvent",
      "position": { "x": 50, "y": 150 },
      "config": {
        "event": "zone_temp_changed"
      }
    },
    {
      "id": "node-2",
      "type": "neo/GetVariable",
      "position": { "x": 300, "y": 100 },
      "config": {
        "variable": "highTempThreshold"
      }
    },
    {
      "id": "node-3",
      "type": "neo/Compare",
      "position": { "x": 500, "y": 150 },
      "config": {
        "operator": ">"
      }
    },
    {
      "id": "node-4",
      "type": "neo/Branch",
      "position": { "x": 700, "y": 150 },
      "config": {}
    },
    {
      "id": "node-5",
      "type": "neo/Log",
      "position": { "x": 900, "y": 100 },
      "config": {
        "level": "warning"
      }
    },
    {
      "id": "node-6",
      "type": "neo/Log",
      "position": { "x": 900, "y": 250 },
      "config": {
        "level": "info"
      }
    }
  ],
  "connections": [
    {
      "from": "node-1.exec",
      "to": "node-3.exec"
    },
    {
      "from": "node-1.value",
      "to": "node-3.a"
    },
    {
      "from": "node-2.value",
      "to": "node-3.b"
    },
    {
      "from": "node-3.exec",
      "to": "node-4.exec"
    },
    {
      "from": "node-3.result",
      "to": "node-4.condition"
    },
    {
      "from": "node-4.true",
      "to": "node-5.exec"
    },
    {
      "from": "node-4.false",
      "to": "node-6.exec"
    }
  ]
}
