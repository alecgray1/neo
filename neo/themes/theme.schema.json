{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Neo Theme",
  "description": "Theme definition for Neo application",
  "type": "object",
  "required": ["name", "type", "colors"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Display name of the theme"
    },
    "type": {
      "type": "string",
      "enum": ["dark", "light"],
      "description": "Theme type (affects system color-scheme)"
    },
    "colors": {
      "type": "object",
      "description": "Color definitions for UI elements",
      "additionalProperties": {
        "type": "string",
        "pattern": "^#([0-9A-Fa-f]{6}|[0-9A-Fa-f]{8})$"
      },
      "properties": {
        "background": { "type": "string", "description": "Main application background" },
        "foreground": { "type": "string", "description": "Default text color" },
        "primary": { "type": "string", "description": "Primary accent color" },
        "primaryForeground": { "type": "string", "description": "Text on primary color" },

        "titleBar.background": { "type": "string" },
        "titleBar.foreground": { "type": "string" },
        "titleBar.inactiveBackground": { "type": "string" },
        "titleBar.inactiveForeground": { "type": "string" },

        "sideBar.background": { "type": "string" },
        "sideBar.foreground": { "type": "string" },
        "sideBar.border": { "type": "string" },

        "activityBar.background": { "type": "string" },
        "activityBar.foreground": { "type": "string" },
        "activityBar.inactiveForeground": { "type": "string" },

        "panel.background": { "type": "string" },
        "panel.border": { "type": "string" },

        "statusBar.background": { "type": "string" },
        "statusBar.foreground": { "type": "string" },
        "statusBar.noFolderBackground": { "type": "string" },

        "input.background": { "type": "string" },
        "input.foreground": { "type": "string" },
        "input.border": { "type": "string" },
        "input.placeholderForeground": { "type": "string" },

        "button.background": { "type": "string" },
        "button.foreground": { "type": "string" },
        "button.hoverBackground": { "type": "string" },
        "button.secondaryBackground": { "type": "string" },
        "button.secondaryForeground": { "type": "string" },
        "button.secondaryHoverBackground": { "type": "string" },

        "list.activeSelectionBackground": { "type": "string" },
        "list.activeSelectionForeground": { "type": "string" },
        "list.hoverBackground": { "type": "string" },
        "list.focusBackground": { "type": "string" },

        "scrollbar.thumb": { "type": "string" },
        "scrollbar.thumbHover": { "type": "string" },
        "scrollbar.track": { "type": "string" },

        "border": { "type": "string" },
        "focusBorder": { "type": "string" },
        "separator": { "type": "string" },

        "dropdown.background": { "type": "string" },
        "dropdown.foreground": { "type": "string" },
        "dropdown.border": { "type": "string" },

        "checkbox.background": { "type": "string" },
        "checkbox.border": { "type": "string" },

        "text.link": { "type": "string" },
        "text.codeBackground": { "type": "string" },

        "error": { "type": "string" },
        "warning": { "type": "string" },
        "info": { "type": "string" },
        "success": { "type": "string" },

        "blueprint.background": { "type": "string", "description": "Blueprint canvas background" },
        "blueprint.grid": { "type": "string", "description": "Blueprint grid dot color" },
        "blueprint.node.background": { "type": "string", "description": "Node body background" },
        "blueprint.node.border": { "type": "string", "description": "Node border color" },
        "blueprint.node.borderPure": { "type": "string", "description": "Pure node border" },
        "blueprint.node.borderLatent": { "type": "string", "description": "Latent/async node border" },
        "blueprint.node.shadow": { "type": "string", "description": "Node shadow color" },
        "blueprint.node.title": { "type": "string", "description": "Node title text" },
        "blueprint.node.pinLabel": { "type": "string", "description": "Default pin label color" },
        "blueprint.execPin.stroke": { "type": "string", "description": "Exec pin outline" },
        "blueprint.execPin.fill": { "type": "string", "description": "Exec pin fill (output)" },
        "blueprint.category.events": { "type": "string", "description": "Events category header" },
        "blueprint.category.flowControl": { "type": "string", "description": "Flow Control category header" },
        "blueprint.category.logic": { "type": "string", "description": "Logic category header" },
        "blueprint.category.math": { "type": "string", "description": "Math category header" },
        "blueprint.category.variables": { "type": "string", "description": "Variables category header" },
        "blueprint.category.utilities": { "type": "string", "description": "Utilities category header" },
        "blueprint.category.async": { "type": "string", "description": "Async category header" },
        "blueprint.category.default": { "type": "string", "description": "Default category header" },
        "blueprint.pin.exec": { "type": "string", "description": "Exec pin color" },
        "blueprint.pin.boolean": { "type": "string", "description": "Boolean pin color" },
        "blueprint.pin.integer": { "type": "string", "description": "Integer pin color" },
        "blueprint.pin.real": { "type": "string", "description": "Real/float pin color" },
        "blueprint.pin.string": { "type": "string", "description": "String pin color" },
        "blueprint.pin.pointValue": { "type": "string", "description": "PointValue pin color" },
        "blueprint.pin.any": { "type": "string", "description": "Any/wildcard pin color" },
        "blueprint.menu.background": { "type": "string", "description": "Context menu background" },
        "blueprint.menu.border": { "type": "string", "description": "Context menu border" },
        "blueprint.menu.itemHover": { "type": "string", "description": "Menu item hover" },
        "blueprint.menu.categoryBackground": { "type": "string", "description": "Expanded category background" },
        "blueprint.menu.searchBackground": { "type": "string", "description": "Search input background" }
      }
    }
  }
}
